<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Renato Rocha</Authors>
    <Description>A useful set of extensions for .NET native types</Description>
    <Copyright>Renato Rocha</Copyright>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageIcon>extensions-icon.jpg</PackageIcon>
    <PackageLicenseFile>GNUv2_License.txt</PackageLicenseFile>
    <PackageTags>.net native types extensions bytearray decimal money double exception resume long object clone diff string description normalization tokenization infulltext json xml base64 hex serialization zip compression runtime compilation</PackageTags>
    <Version>1.0.10</Version>
    <RepositoryUrl>https://github.com/rocha83/Extensions</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageReleaseNotes>Added ExecuteAsSourceCode string extension method</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis" Version="4.13.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.13.0" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.6" />
  </ItemGroup>

  <ItemGroup>
    <None Update="extensions-icon.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="GNUv2_License.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
